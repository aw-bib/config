alignment top_right
# alignment top_left
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont cantarell:size=8
gap_x 5
gap_y 32
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no

maximum_width 64
own_window yes
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 64

stippled_borders 0
update_interval 2.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
${alignc}$nodename
${alignc}$sysname
# ${alignc}${exec cat /etc/debian_version}
${alignc}$kernel
${alignc}$machine
$color Proc ${hr 1}
${color grey}$color $processes  ${color grey}/ $color $running_processes
${color lightgrey}${top name 1}
${color lightgrey}${top name 2}
${color lightgrey}${top name 3}
${color lightgrey}${top name 4}
${color lightgrey}${top name 5}
$color CPU ${hr 1}
${color grey}$freq MHz
${color}$cpu% ${cpubar 4}
${color grey}${cpugraph cpu0}
${alignc}CPU0
${color grey}${cpugraph cpu1}
${alignc}CPU1
${color grey}${cpugraph cpu2}
${alignc}CPU2
${color grey}${cpugraph cpu3}
${alignc}CPU3
$color Temp ${hr 1}
${color grey}ACPI ${hwmon 0 temp 1}°C
${color grey}GPU ${hwmon 1 temp 1}°C
$color Mem ${hr 1}
$color$memperc% $color ${membar 4}
${color grey}${alignc}$mem/$memmax
$color $swapperc% ${color grey}$color${swapbar 4}
${color grey}${alignc}$swap/$swapmax
$color WLAN ${hr 1}
# eth0:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}
${color grey}${upspeed wlp3s0} ${alignr}${downspeed wlp3s0}
${color grey}${downspeedgraph wlp3s0 32, 30}${alignr}${color grey}${upspeedgraph wlp3s0 32, 30}
${color grey}up ${alignr}down
$color Disks ${hr 1}
${color #7CAFCE} / ${color #7CAFCE} ${color white}${fs_used_perc /}%
${color #7CAFCE}${fs_bar /}
$alignr ${color white}${fs_used /}
${color #7CAFCE} /home ${color #7CAFCE} ${color white}${fs_used_perc /home}%
${color #7CAFCE}${fs_bar /home}
$alignr ${color white}${fs_used /home}
${color #7CAFCE} /var ${color #7CAFCE} ${color white}${fs_used_perc /var}%
${color #7CAFCE}${fs_bar /var}
$alignr ${color white}${fs_used /var}
${color #7CAFCE} /tmp ${color #7CAFCE} ${color white}${fs_used_perc /tmp}%
${color #7CAFCE}${fs_bar /tmp}
$alignr ${color white}${fs_used /tmp}
$hr
${alignc}$color $uptime
